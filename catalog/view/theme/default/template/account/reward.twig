{{ header }}
<!-- Page Head -->
<div class="page-head">
    <div class="container">
        <h1>{{ heading_title }}</h1>
        <div class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
            {% endfor %}
        </div>
    </div>
</div>
<!-- // Page Head -->


<!-- Page Content -->
<div class="page-content container">
    <div class="row row-reverse">
        <!-- Content Side -->
        <div class="col-s-12 col-l-9">
            <p>{{ text_total }} <b>{{ total }}</b>.</p>
            <div class="table-responsive">
              <table class="table table-borderd">
                <thead>
                  <tr>
                    <td class="text-left">{{ column_date_added }}</td>
                    <td class="text-left">{{ column_description }}</td>
                    <td class="text-right">{{ column_points }}</td>
                  </tr>
                </thead>
                <tbody>
                
                {% if rewards %}
                {% for reward in rewards %}
                <tr>
                  <td class="text-left">{{ reward.date_added }}</td>
                  <td class="text-left">{% if reward.order_id %} <a href="{{ reward.href }}">{{ reward.description }}</a> {% else %}
                    {{ reward.description }}
                    {% endif %}</td>
                  <td class="text-right">{{ reward.points }}</td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="3">{{ text_empty }}</td>
                </tr>
                {% endif %}
                  </tbody>
                
              </table>
            </div>
            <div class="row">
              <div class="col-sm-6 text-left">{{ pagination }}</div>
              <div class="col-sm-6 text-right">{{ results }}</div>
            </div>
            <div class="buttons clearfix">
              <div class="pull-right"><a href="{{ continue }}" class="btn primary">{{ button_continue }}</a></div>
            </div>
        </div>
        <!-- // Content Side -->
        
        <!-- Widegets Side -->
{{ column_left }}
</div>
</div>
<!-- // Page Content -->

{{ footer }}

