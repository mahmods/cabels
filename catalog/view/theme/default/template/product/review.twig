                    {% if review.rating < i %} <span class="ti-star"></i></span> {% else %} <span class="ti-star active"></span> {% endif %}
                    {% endfor %}
                </div>
                <h3>{{ review.author }}</h3>
                <p>{{ review.text }}</p>
            </div>
        </div>
