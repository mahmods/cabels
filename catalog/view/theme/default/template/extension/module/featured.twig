<!-- Featured Products -->
        <div class="featured-products">
            <div class="container">
                <div class="section-title">
					<h2>{{heading_title}}</h2>
                </div>
                
                <div class="row">
                  {% for product in products %}                  
                    <!-- product block -->
                    <div class="col-s-12 col-m-6 col-l-3 product-block">
                        <div class="content-box">
                            <a href="{{ product.href }}" class="image"><img src="{{ product.thumb }}" alt=""> 
                            {% if not product.special %}
                                {% else %}
                                <span class="discount">Discount</span>
                                {% endif %}
                                </a>
                            <div class="hvr">
                                <a href="#" onclick="wishlist.add('{{ product.product_id }}');" class="ti-heart"></a>
                                <a href="#" onclick="cart.add('{{ product.product_id }}');" class="ti-android-cart" data-modal="cart-added">
                                </a>
                         	</div>
                            <a href="{{ product.href }}"><h3>{{ product.name }}</h3></a>
                            {% if not product.special %}
                            <span class="price">{{ product.price }}</span>
                                {% else %}
                                <span class="price">{{ product.special }} <i>{{ product.price }}</i></span>
                                {% endif %}
                            
                            {% if product.rating %}
                              <div class="stars">
                                {% for i in 5 %}
                                {% if product.rating < i %}
                                <span class="ti-star"></span>
                                {% else %}
                                <span class="ti-star active"></span>
                                {% endif %}
                                {% endfor %}
                              </div>
                            {% endif %}
                        </div>
                    </div>
                    <!-- // product block -->
                    {% endfor %}
                </div>
                
				<a href="#" class="section-more">{{more_text}}</a>
            </div>
        </div>
        <!-- // Featured Products -->
        
        <!-- Cart Added Modal -->
<div class="modal-box tornado-ui success" id="cart-added">
    <div class="modal-content pro">
        <span class="close-modal ti-clear"></span>
        <i class="ti-done-all"></i>
        <h3>Item Has Been Added To Cart</h3>
        <div class="modal-footer clear-after">
            <a href="#" class="btn primary close-modal">{{text_continue}}</a>
            <a href="{{ checkout }}" class="btn secondary">{{text_checkout}}</a>
        </div>
    </div>
</div>
<!-- // Cart Added Modal -->

